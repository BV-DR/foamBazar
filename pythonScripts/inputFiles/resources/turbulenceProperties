defaults
{
    simulationType  laminar;
}


db
{
    simulationType
    {
        "(lam.*|none)"  laminar;

        "(ras|RAS|kwSST|kOmegaSST)"     RAS
        {
            RAS
            {
                RASModel        kOmegaSST;
                turbulence      on;
                printCoeffs     on;
            }
        };

        "(ke|kEpsilon)"     RAS
        {
            RAS
            {
                RASModel        kEpsilon;
                turbulence      on;
                printCoeffs     on;
            }
        };

        "(les|LES|leskEqn)"     LES
        {
            LES
            {
                LESModel        kEqn;
                turbulence      on;
                printCoeffs     on;
                delta           smooth;
                cubeRootVolCoeffs { deltaCoeff 1; }
                PrandtlCoeffs
                {
                    delta           cubeRootVol;
                    cubeRootVolCoeffs { deltaCoeff 1; }
                    smoothCoeffs
                    {
                        delta           cubeRootVol;
                        cubeRootVolCoeffs { deltaCoeff 1; }
                        maxDeltaRatio   1.1;
                    }
                    Cdelta          0.158;
                }
                vanDriestCoeffs
                {
                    delta           cubeRootVol;
                    cubeRootVolCoeffs { deltaCoeff 1; }
                    smoothCoeffs
                    {
                        delta           cubeRootVol;
                        cubeRootVolCoeffs { deltaCoeff 1; }
                        maxDeltaRatio   1.1;
                    }
                    Aplus           26;
                    Cdelta          0.158;
                }
                smoothCoeffs
                {
                    delta           cubeRootVol;
                    cubeRootVolCoeffs { deltaCoeff 1; }
                    maxDeltaRatio   1.1;
                }
            }
        };
    }
}

alias
{
    type    simulationType;
    model   simulationType;
}
